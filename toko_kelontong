CREATE DATABASE toko_kelontong;
USE toko_kelontong;

-- Tabel produk
CREATE TABLE produk (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nama VARCHAR(100),
    harga INT,
    stok INT
);

-- Tabel transaksi
CREATE TABLE transaksi (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nama_pembeli VARCHAR(100),
    id_produk INT,
    jumlah INT,
    total INT,
    tanggal DATETIME DEFAULT CURRENT_TIMESTAMP
);

-- Insert 3 produk
INSERT INTO produk (nama, harga, stok) VALUES
('Beras 1kg', 15000, 20),
('Minyak Goreng 1L', 14000, 15),
('Gula 1kg', 13000, 17);
